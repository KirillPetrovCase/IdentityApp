@{
    ViewData["Title"] = "Home Page";
}

@if (User.Identity.IsAuthenticated)
{
    <p>@User.Identity.Name</p>

    <form method="post" class="form-group" asp-controller="Account" asp-action="Logout">
        <input type="submit" value="Выход" class="form-control"/>
    </form>
}
else
{
    <a class="form-control" asp-controller="Account" asp-action="Login">Вход</a>
    <a class="form-control" asp-controller="Account" asp-action="Register">Регистрация</a>
}