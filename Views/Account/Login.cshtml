@model IdentityApp.ViewModels.LoginViewModel

<div class="d-flex justify-content-center">
    <form method="post" class="form-group" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl">
        <div asp-validation-summary="ModelOnly"></div>
        <h3 class="form-text">Авторизация пользователя</h3>
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input class="form-control" asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-check">
            <input class="form-check-input" asp-for="RememberCheck" />
            <label class="form-check-label"  asp-for="RememberCheck"></label>
        </div>
        <div class="form-floating mb-1">
            <input class="btn btn-primary w-100" type="submit" value="Авторизоваться" />
        </div>
    </form>
</div>